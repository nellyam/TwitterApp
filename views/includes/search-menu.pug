div(class="search-menu d-flex flex-column")
  if users && users.length
    each user in users
      a(href="/users"+ user.username class="d-flex flex-row align-items-center search-menu-item cursor-pointer ")
        img(class="p-1" width="40" height="40" src=user.avatar)
        span(class="pl-3")= user.username
  else 
    span(class="p-3") Aucun utilisateur
